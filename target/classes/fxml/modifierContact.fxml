<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.111"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.projetjava.projetjava2.controllers.ModifierContactController"
      spacing="10" alignment="CENTER">
    
    <Label text="Modifier un Contact" />
    
    <TextField fx:id="lastnameField" promptText="Nom"/>
    <TextField fx:id="firstnameField" promptText="Prénom"/>
    <TextField fx:id="nicknameField" promptText="Surnom"/>
    <TextField fx:id="phoneField" promptText="Téléphone"/>
    <TextField fx:id="emailField" promptText="Email"/>
    
    <Button text="Enregistrer" onAction="#handleUpdate"/>
</VBox>
